{
	"easycom": { 
		"autoscan": true, 
		"custom": { 
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path" : "pages/mine/mine",
			"style" : 
			{
				"navigationBarTitleText" : "我的"
			}
		},
		{
			"path" : "pages/message/message",
			"style" : 
			{
				"navigationBarTitleText" : "消息"
			}
		},
		{
			"path" : "pages/pet/pet",
			"style" : 
			{
				"navigationBarTitleText" : "萌宠"
			}
		},
		{
			"path" : "pages/message/likes/likes",
			"style" : 
			{
				"navigationBarTitleText" : "收到的赞"
			}
		},
		{
			"path" : "pages/message/comments/comments",
			"style" : 
			{
				"navigationBarTitleText" : "收到的评论"
			}
		},
		{
			"path" : "pages/message/follow/follow",
			"style" : 
			{
				"navigationBarTitleText" : "新的关注"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#27BA9B",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"list":[
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/assets/images/home.png",
				"selectedIconPath": "static/assets/images/home-select.png"
			},
			{
				"pagePath": "pages/pet/pet",
				"text": "萌宠",
				"iconPath": "static/assets/images/pet.png",
				"selectedIconPath": "static/assets/images/pet-select.png"
			},
			{
				"pagePath": "pages/message/message",
				"text": "消息",
				"iconPath": "static/assets/images/news.png",
				"selectedIconPath": "static/assets/images/news-select.png"
			},
			{
				"pagePath": "pages/mine/mine",
				"text": "我的",
				"iconPath": "static/assets/images/userinfo.png",
				"selectedIconPath": "static/assets/images/userinfo-select.png"
			}
		]
	},
	"uniIdRouter": {}
}
